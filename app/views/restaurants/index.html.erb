<h1>Restaurants</h1>
<% @restaurants.each do |restaurant| %>
  <%= render 'restaurant', restaurant: restaurant %>
<% end %>
<% if params[:page].to_i > 0 %>
    <%= link_to 'Previous', restaurants_path(lat: params[:lat], lng: params[:lng], page: params[:page].to_i - 1) %>
<% end %>
<%= link_to 'Next', restaurants_path(lat: params[:lat], lng: params[:lng], page: params[:page].to_i + 1) %>
